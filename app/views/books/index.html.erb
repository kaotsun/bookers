 <% if notice %>
  <div class="success-message"> <%= notice %> </div>
  <br>
 <% end %>
 <div class="index-dark">Books</div><br>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @books.each do |book| %>
  		<tr>
  			<td><%= book.title %></td>
      		<td><%= book.body %></td>
      		<td><%= link_to "Show", "http://localhost:3000/bookers-level1.herokuapp.com/books/#{book.id}" %></td>
      		<td><%= link_to "Edit", "http://localhost:3000/bookers-level1.herokuapp.com/books/#{book.id}/edit" %></td>
      		<td><%= link_to "Destroy", "http://localhost:3000/bookers-level1.herokuapp.com/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      	</tr>
    <% end %>
  </tbody>
</table>

 <div class="index-dark">New book</div><br>
 <!-- form_for部分 -->
 <%= form_for(@book, url: 'http://localhost:3000/bookers-level1.herokuapp.com/books', method: :post) do |f| %>
 <%= render 'layouts/error_messages', model: f.object %>
 
    <b>Title</b><br>
    <%= f.text_field :title %><br>
    <b>Body</b><br>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
 
<% end %>